<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivityMimica">

    <TextView
        android:id="@+id/textViewMimicaFrase"
        android:layout_width="412dp"
        android:layout_height="93dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/azul"
        android:gravity="center"
        android:text="@string/mimica"
        android:textColor="#FFFDFD" />



    <TextView
        android:id="@+id/textViewMimicaTragps"
        android:layout_width="412dp"
        android:layout_height="61dp"
        android:layout_below="@+id/textViewMimicaFrase"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp"
        android:background="@color/rosa"
        android:gravity="center"
        android:text="@string/bebes"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonOcultarPalabraMimica"
        android:layout_width="180dp"
        android:layout_height="58dp"
        android:layout_below="@+id/textViewMimicaTragps"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="117dp"
        android:onClick="ocultarPalabra"
        android:text="@string/ocultar"
        android:textStyle="italic" />

    <Button
        android:id="@+id/buttonMimica"
        android:layout_width="189dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="598dp"
        android:layout_marginEnd="113dp"
        android:backgroundTint="#FFEB3B"
        android:onClick="siguientePalabra"
        android:text="@string/comenzar" />

    <ImageView
        android:id="@+id/imageViewMimica"
        android:layout_width="210dp"
        android:layout_height="218dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="198dp"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/icono" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>