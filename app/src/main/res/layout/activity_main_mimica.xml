<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivityMimica">

    <TextView
        android:id="@+id/textViewMimicaFrase"
        android:layout_width="412dp"
        android:layout_height="93dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/azul"
        android:gravity="center"
        android:text="@string/mimica"
        android:textColor="#FFFDFD" />



    <TextView
        android:id="@+id/textViewMimicaTragps"
        android:layout_width="412dp"
        android:layout_height="61dp"
        android:layout_below="@+id/textViewMimicaFrase"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp"
        android:background="@color/rosa"
        android:gravity="center"
        android:text="@string/bebes"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonOcultarPalabraMimica"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/textViewMimicaTragps"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="128dp"
        android:onClick="ocultarPalabra"
        android:text="@string/ocultar"
        android:textStyle="italic" />

    <Button
        android:id="@+id/buttonMimica"
        android:layout_width="165dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="620dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="#FFEB3B"
        android:onClick="siguientePalabra"
        android:text="@string/comenzar" />

    <ImageView
        android:id="@+id/imageViewMimica"
        android:layout_width="210dp"
        android:layout_height="218dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="198dp"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/icono" />


</RelativeLayout>