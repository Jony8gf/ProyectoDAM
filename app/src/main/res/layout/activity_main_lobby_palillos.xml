<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityLobbyPalillos"
    android:background="@color/black">

    <TextView
        android:id="@+id/textViewPalillosLobby"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/azul"
        android:gravity="center"
        android:text="@string/palillos"
        android:textColor="#FFFDFD"
        android:textSize="24sp" />


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="268dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="143dp"
        android:layout_marginEnd="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextPL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:contentDescription="@string/palillos"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/palillos"
                android:textColor="#FBF9F9"
                android:textColorHint="@color/white"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/editTextPL2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:contentDescription="@string/palillos"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/palillos"
                android:textColor="#FBF9F9"
                android:textColorHint="@color/white"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/editTextPL3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:contentDescription="@string/palillos"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/palillos"
                android:textColor="#FBF9F9"
                android:textColorHint="@color/white"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/editTextPL4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:contentDescription="@string/palillos"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/palillos"
                android:textColor="#FBF9F9"
                android:textColorHint="@color/white"
                android:textSize="22sp" />


        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/buttonPalillosUp"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="59dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="470dp"
        android:layout_marginEnd="112dp"
        android:background="@color/rosa"
        android:contentDescription="@string/palillos"
        android:onClick="up"
        android:src="@drawable/up" />

    <ImageButton
        android:id="@+id/buttonPalillosDown"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="61dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="113dp"
        android:layout_marginTop="471dp"
        android:layout_marginEnd="90dp"
        android:background="@color/rosa"
        android:contentDescription="@string/palillos"
        android:onClick="down"
        android:src="@drawable/down" />

    <Button
        android:id="@+id/buttonPalillosAceptar"
        android:layout_width="213dp"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="555dp"
        android:onClick="irPalillos"
        android:text="@string/acpetar"
        android:textSize="24sp" />

</RelativeLayout>