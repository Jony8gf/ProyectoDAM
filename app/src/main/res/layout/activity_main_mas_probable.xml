<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivityMasProbable">

    <TextView
        android:id="@+id/textViewMasProbableFrase"
        android:layout_width="412dp"
        android:layout_height="93dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/azul"
        android:gravity="center"
        android:text="@string/masprobable"
        android:textColor="#FFFDFD" />

    <TextView
        android:id="@+id/textViewMasProbableTragps"
        android:layout_width="412dp"
        android:layout_height="61dp"
        android:layout_below="@+id/textViewMasProbableFrase"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp"
        android:background="@color/rosa"
        android:gravity="center"
        android:text="@string/bebes"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/buttonMasProbable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="127dp"
        android:backgroundTint="#FFEB3B"
        android:onClick="fraseMasProbable"
        android:text="@string/comenzar" />

    <ImageView
        android:id="@+id/imageViewMasProbableRelleno"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="101dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="257dp"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/icono" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewMP"
        android:layout_width="369dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="542dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-8043381776244583/9362786215"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</RelativeLayout>