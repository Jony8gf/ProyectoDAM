<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivityPalillos">

    <TextView
        android:id="@+id/textViewPalillosInfo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="#00BCD4"
        android:gravity="center"
        android:text="@string/palillos"
        android:textColor="#FFFDFD"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewTragosPalillos"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_below="@+id/textViewPalillosInfo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp"
        android:background="@color/rosa"
        android:gravity="center"
        android:text="@string/vacio"
        android:textColor="@color/black" />


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>


    <ImageView
        android:id="@+id/imageViewPalillo1"
        android:layout_width="100dp"
        android:layout_height="565dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="78dp"
        android:contentDescription="@string/palillos"
        android:onClick="escogerPalillo"
        app:srcCompat="@drawable/palillo_entero" />

    <ImageView
        android:id="@+id/imageViewPalillo2"
        android:layout_width="98dp"
        android:layout_height="562dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/palillos"
        android:onClick="escogerPalillo"
        app:srcCompat="@drawable/palillo_entero" />

    <ImageView
        android:id="@+id/imageViewPalillo3"
        android:layout_width="92dp"
        android:layout_height="565dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="214dp"
        android:layout_marginTop="75dp"
        android:contentDescription="@string/palillos"
        android:onClick="escogerPalillo"
        app:srcCompat="@drawable/palillo_entero" />

    <ImageView
        android:id="@+id/imageViewPalillo4"
        android:layout_width="wrap_content"
        android:layout_height="586dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="308dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="0dp"
        android:contentDescription="@string/palillos"
        android:onClick="escogerPalillo"
        app:srcCompat="@drawable/palillo_entero" />

    <ImageView
        android:id="@+id/imageViewTaparPalillos"
        android:layout_width="wrap_content"
        android:layout_height="176dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="3dp"
        android:contentDescription="@string/palillos"
        android:minWidth="300dp"
        app:srcCompat="@drawable/tapar_palillos" />

</RelativeLayout>