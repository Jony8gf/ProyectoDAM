<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationViewDrink"
        android:layout_width="match_parent"
        android:layout_height="468dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/drunkbeer" />

    <TextView
        android:id="@+id/textViewRecomendacionesDrink"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="@string/not_drink"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnSaberDrink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saberMas"
        android:text="@string/sabermas" />


</LinearLayout>