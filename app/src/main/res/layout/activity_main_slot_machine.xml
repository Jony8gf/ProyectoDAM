<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivitySlotMachine"
    android:background="@color/black"
    >

    <LinearLayout
        android:id="@+id/ruedaSlot"
        android:layout_width="339dp"
        android:layout_height="159dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/slot1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/slotmachine"
            android:src="@drawable/slot_fresa" />

        <ImageView
            android:id="@+id/slot2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/slotmachine"
            android:src="@drawable/slot_fresa" />

        <ImageView
            android:id="@+id/slot3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/slotmachine"
            android:src="@drawable/slot_fresa" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSlotTirar"
        android:layout_width="224dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        android:onClick="tiradaSlot"
        android:text="@string/tirar" />

    <TextView
        android:id="@+id/textViewSlotTragos"
        android:layout_width="334dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="156dp"
        android:background="@color/azul"
        android:text="@string/bebes"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp" />

</RelativeLayout>